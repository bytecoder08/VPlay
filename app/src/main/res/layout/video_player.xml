<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ExoPlayer's PlayerView (built-in controller) -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:fitsSystemWindows="true"
        android:background="#000"
        app:show_buffering="when_playing"
        app:use_controller="true" />

    <!-- Transparent touch surface for gestures -->
    <View
        android:id="@+id/touchSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#33000000">

        <ImageButton
            android:id="@+id/btnLock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:contentDescription="Lock"
            android:src="@drawable/ic_unlock" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/btnRotateMode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:contentDescription="Rotate mode"
            android:src="@drawable/ic_rotate" />

        <ImageButton
            android:id="@+id/btnFullscreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:contentDescription="Fullscreen"
            android:src="@drawable/ic_fullscreen" />
    </LinearLayout>

    <!-- Center overlay (seek/speed/volume/brightness hints) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:background="#33000000">

        <ImageView
            android:id="@+id/overlayIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/ic_play" />

        <TextView
            android:id="@+id/overlayHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:text="+10s" />
    </LinearLayout>

    <!-- Left brightness vertical bar -->
    <SeekBar
        android:id="@+id/brightnessBar"
        android:layout_width="24dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:rotation="270"
        android:visibility="gone" />

    <!-- Right volume vertical bar -->
    <SeekBar
        android:id="@+id/volumeBar"
        android:layout_width="24dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:rotation="270"
        android:visibility="gone" />

    <!-- Bottom bar (time text only; Exo controller has seekbar) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#33000000">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 / 00:00"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>
